{
  "compilerOptions": {
    "target": "es2016",    
    "lib": ["es6"],
    "types": ["reflect-metadata"],                             
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,                         
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "dist"                             
  },
  "lib": [
    "es2016",
    "es2015",
  ],
}
